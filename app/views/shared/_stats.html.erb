<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.followed_users.count %>
    </strong>
    following☺︎
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers☺︎
  </a>

  <a href="<%= favorites_user_path(@user) %>">
    <strong id="favorite" class="stat">
      <%= Favorite.where(favoller_id:current_user).count %>
    </strong>
    favorites★
  </a>
</div>
